            <table border='1' style='width: 100%;'>
              <tr>
                <th width='105'>&nbsp;SKILLS</th>
                <th>5</th><th>4</th><th>3</th><th>2</th><th>1</th>
              </tr>
              <% ["Handwriting", "Fluency", "Games", "Sports",
                  "Handling of Tools", "Drawing", "Music"].each_with_index do |skill, i| %>
                <tr>
                  <td>&nbsp;<%= i+1 %>. <%= skill %></td>
                  <td></td><td></td><td></td><td></td><td></td>
                </tr>
              <% end %>
              <tr>
                <td>&nbsp;</td>
                <td></td><td></td><td></td><td></td><td></td>
              </tr>
            </table>
          </div>
        </div>
        
        <div style="float: left; width: 33%;">
          <div style="margin-left: 10px;">
            <table border='1' style='width: 100%;'>
              <tr>
                <th width='105'>&nbsp;BEHAVIOUR</th>
                <th>5</th><th>4</th><th>3</th><th>2</th><th>1</th>
              </tr>
              <% ["Punctuality", "Attendance", "Reliability", "Neatness",
                  "Politeness", "Honesty", "To Teachers", "To Students"].each_with_index do |skill, i| %>
                <tr>
                  <td>&nbsp;<%= i+1 %>. <%= skill %></td>
                  <td></td><td></td><td></td><td></td><td></td>
                </tr>
              <% end %>
            </table>
          </div>
        </div>
        
        <div style="float: right; width: 33%;">
          <div style="margin-left: 10px;">
            <table border='1' style='width: 100%;'>
              <tr>
                <th width='105'>&nbsp;BEHAVIOUR</th>
                <th>5</th><th>4</th><th>3</th><th>2</th><th>1</th>
              </tr>
              <% ["Self Control", "Cooperation", "Responsibility", "Initiative",
