              <% end %>
            </table>
          </div>
        </div>
        
        <div class="clear-both"></div>
        
        <div class="remarks" style="margin-top: 10px;">
          <table border='0' style="width: 100%;">
            <tr>
              <td style='width: 100px; white-space: nowrap;'>Guidance Counselor's Remarks&nbsp;&nbsp;</td>
              <td><%= f.text_field :term, :class => "input-with-bottom-line-only", :style=>"width: 100%;" %></td>
            </tr>
          </table>
          <table border='0' style="width: 100%;">
            <tr>
              <td style='width: 100px; white-space: nowrap;'>House Master's Remarks&nbsp;&nbsp;</td>
              <td><%= f.text_field :term, :class => "input-with-bottom-line-only", :style=>"width: 100%;" %></td>
            </tr>
          </table>
          <table border='0' style="width: 100%;">
            <tr>
              <td style='width: 100px; white-space: nowrap;'>From Master's Remarks&nbsp;&nbsp;</td>
              <td><%= f.text_field :term, :class => "input-with-bottom-line-only", :style=>"width: 100%;" %></td>
            </tr>
          </table>
          <table border='0' style="width: 100%;">
            <tr>
              <td style='width: 100px; white-space: nowrap;'>Principal's Remarks&nbsp;&nbsp;</td>
              <td><%= f.text_field :term, :class => "input-with-bottom-line-only", :style=>"width: 100%;" %></td>
            </tr>
          </table>
        </div>
        
        <%= link_to "Print", {:controller => :preports,:action => :generate_pdf},:target => '_blank', :style=>"float: right;" %>
