              <td><%= f.text_field :sur_name, :class => "input-with-no-border small-width" %></td>
              <td><%= f.text_field :sur_name, :class => "input-with-no-border small-width" %></td>
              <td><%= f.text_field :sur_name, :class => "input-with-no-border medium-width" %></td>
            </tr>
